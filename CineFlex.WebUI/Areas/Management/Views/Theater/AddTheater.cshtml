@model TheaterVM

@{
    ViewData["Title"] = "AddTheater";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h4>Salon Ekleme Sayfası</h4>
<span>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>

<hr />

<div>
    <form asp-action="AddTheater" method="post">

        <div class="row mb-2">
            <div class="form-group col-md-6">
                <label asp-for="Name"><b>Salon Adı</b></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Capacity"><b>Salon Kapasitesi</b></label>
                <input asp-for="Capacity" class="form-control">
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-2">
            <b>Ekran Türleri</b>
            <div class="row">
                <div class="form-group col-md-2">
                    <input asp-for="ScreenType" class="form-check-input" type="radio" value="2D">
                    <label asp-for="ScreenType" class="form-check-label">
                        2D
                    </label>
                </div>
                <div class="form-group col-md-2">
                    <input asp-for="ScreenType" class="form-check-input" type="radio" value="3D">
                    <label asp-for="ScreenType" class="form-check-label">
                        3D
                    </label>
                </div>
                <div class="form-group col-md-2">
                    <input asp-for="ScreenType" class="form-check-input" type="radio" value="IMAX">
                    <label asp-for="ScreenType" class="form-check-label">
                        IMAX
                    </label>
                </div>
            </div>
            <span asp-validation-for="ScreenType" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-success">Salonu Kaydet</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}