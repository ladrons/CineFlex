@model List<TicketVM>

@{
    ViewData["Title"] = "TicketList";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h4>Aktif Bilet Listesi</h4>
<span>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>

<hr />

<div>
    <table class="table" style="text-align:center">
        <thead>
            <tr>
                <th scope="col">Bilet Adı</th>
                <th scope="col">Bilet Fiyatı ₺</th>
                <th colspan="2">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price₺</td>
                    <td><a asp-controller="Ticket" asp-action="UpdateTicket" asp-route-id="" class="btn btn-outline-warning">Bileti Güncelle</a></td>
                    <td><a asp-controller="Saloon" asp-action="Null" asp-route-id="" class="btn btn-outline-danger">Bileti Kaldır</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>