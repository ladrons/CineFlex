@model TicketVM

@{
    ViewData["Title"] = "AddTicket";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h4>Bilet Oluşturma Sayfası</h4>
<span>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>

<hr />

<div>
    <form asp-action="AddTicket" method="post">

        <div class="form-group mb-2">
            <label asp-for="Name"><b>Bilet Adı</b></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Price"><b>Birim Fiyatı ₺</b></label>
            <input asp-for="Price" class="form-control">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-success">Bilet Oluştur</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}