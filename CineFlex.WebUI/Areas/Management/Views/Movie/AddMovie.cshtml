@model MovieVM

@{
    ViewData["Title"] = "AddMovie";
    Layout = "~/Areas/Management/Views/Shared/_Layout.cshtml";
}

<h4>Film Ekleme Sayfası</h4>
<span>Lorem ipsum dolor sit amet, consectetur adipiscing elit.</span>

<hr />

<div>
    <form asp-action="AddMovie" method="post">

        <div class="form-group mb-2">
            <label asp-for="Title"><b>Film Adı</b></label>
            <input asp-for="Title" class="form-control">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Description"><b>Film Konusu</b></label>
            <textarea class="form-control" style="height: 100px" asp-for="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="row mb-2">
            <b>Film Türleri</b>
            @foreach (var item in Model.ActiveGenres)
            {
                <div class="form-group col-md-2">
                    <input class="form-check-input" type="checkbox" name="SelectedGenreIds" id="checkbox_@item.Id" value="@item.Id">
                    <label class="form-check-label" for="checkbox_@item.Id">
                        @item.Name
                    </label>
                </div>
            }
            <span asp-validation-for="SelectedGenreIds" class="text-danger"></span>
        </div>

        <div class="form-group mb-2">
            <label asp-for="Director"><b>Yönetmen</b></label>
            <input asp-for="Director" class="form-control">
            <span asp-validation-for="Director" class="text-danger"></span>
        </div>

        <div class="row mb-2">
            <div class="form-group col-md-6">
                <label asp-for="ReleaseDate"><b>Vizyon Tarihi</b></label>
                <input asp-for="ReleaseDate" type="date" class="form-control" value="@DateTime.Now">
                <span asp-validation-for="ReleaseDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DurationInMunite"><b>Süre (Dakika)</b></label>
                <input asp-for="DurationInMunite" class="form-control" value="">
                <span asp-validation-for="DurationInMunite" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-2">
            <b>Yayın Türleri</b>
            @foreach (var item in Model.ActiveFormats)
            {
                <div class="form-group col-md-2">
                    <input class="form-check-input" type="checkbox" name="SelectedFormatIds" id="checkbox_@item.Id" value="@item.Id">
                    <label class="form-check-label" for="checkbox_@item.Id">
                        @item.Name
                    </label>
                </div>
            }
            <span asp-validation-for="SelectedFormatIds" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-success">Filmi Kaydet</button>
    </form>
</div>

@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}